<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileControl.Views.RegistrationPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Vertical">
                <Label Text="ФИО"/>
                <Entry x:Name="entry_name"/>
            </StackLayout>
            <StackLayout Orientation="Vertical">
                <Label Text="Логин"/>
                <Entry x:Name="entry_login"/>
            </StackLayout>
            <StackLayout Orientation="Vertical">
                <Label Text="Пароль"/>
                <Entry x:Name="entry_pass"/>
            </StackLayout>
            <StackLayout>
                <Button Text="Зарегистрироваться"
                        x:Name="btn_reg"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>